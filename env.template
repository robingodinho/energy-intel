SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Cron Security
# Generate a random secret (e.g., using `openssl rand -base64 32`)
# This protects the /api/ingest endpoint from unauthorized access
CRON_SECRET=your_cron_secret_here

